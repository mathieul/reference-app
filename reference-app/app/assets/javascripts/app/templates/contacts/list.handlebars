<table>
  <thead>
    <tr>
      <td>ID</td>
      <td>Name</td>
    </tr>
  </thead>

  <tbody>
    {{#each contacts}}
      {{#if this.id}}
        {{view App.ShowContactView contactBinding="this"}}
      {{/if}}
    {{/each}}

    {{#if isNewVisible}}
      <tr>
        <td>*</td>
        <td>{{view App.NewContactView}}</td>
      </tr>
    {{/if}}
  </tbody>
</table>

<div class="commands">
  <a href="#" {{action "showNew"}}>New Contact</a>
  <a href="#" {{action "refreshListing"}}>Refresh List</a>
</div>
