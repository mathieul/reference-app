<tr>
  <td>{{contact.id}}</td>
  <td class="data">
    {{#if isEditing}}
      {{view App.EditContactView contactBinding="contact"}}
    {{else}}
      {{contact.fullName}}
      <div class="commands">
        <a href="#" class="btn" {{action "showEdit"}}>Edit</a>
        &nbsp;
        <a href="#" class="btn btn-danger" {{action "destroyRecord"}}>Remove</a>
      </div>
    {{/if}}
  </td>
</tr>
